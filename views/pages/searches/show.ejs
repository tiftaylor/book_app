<%- include('../../layout/top') %>

  <main>
    
    <div class="sub-header">
      <h2>Search Results</h2>
    </div>

    <div class="resultContainer">
      <% for (book of bookArray) { %>
        <form class="resultBox" action="/books" method="POST">
          <img src="<%= book.image_url %>" alt="">
          <h3><%= book.title %></h3>
          <p><%= book.author %></p>
          <p><%= book.summary %></p>

          <input type="hidden" name="author" value="<%= book.author %>">
          <input type="hidden" name="title" value="<%= book.title %>">
          <input type="hidden" name="isbn" value="<%= book.isbn %>">
          <input type="hidden" name="image_url" value="<%= book.image_url %>">
          <input type="hidden" name="summary" value="<%= book.summary %>">
          <input type="hidden" name="bookshelf" value="<%= book.bookshelf %>">

          <input type="submit" value="Select this Book">
        </form>
      <% } %>
    </div>

  </main>

<%- include('../../layout/bottom') %>